<!-- $Id$ -->
<testcase>
  <info>
    <p>
      This test checks that linefeed treatment and white space
collapse are performed on a fo:title.
    </p>
  </info>
  <fo>
    <fo:root xmlns:fo="http://www.w3.org/1999/XSL/Format">
      <fo:layout-master-set>
        <fo:simple-page-master master-name="small"
          page-height="10cm" page-width="10cm">
          <fo:region-body/>
        </fo:simple-page-master>
      </fo:layout-master-set>
    
      <fo:page-sequence master-reference="small">
        <fo:title>The
                  title
                  of
the
article</fo:title>
        <fo:flow flow-name="xsl-region-body">
          <fo:block>The
                    text
                    of
the
article</fo:block>
        </fo:flow>
      </fo:page-sequence>
    </fo:root>
  </fo>
  <checks>
    <eval expected="The text of the article" xpath="//flow"/>
    <eval expected="The title of the article" xpath="//title"/>
  </checks>
</testcase>
