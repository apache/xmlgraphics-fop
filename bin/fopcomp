#!/bin/ksh
function prefix {
    typeset path
    path=`pwd`
    expr $path : '\(.*\)src/org/apache/fop/.*'
}
set -x
if [ $1 = "-j" ]; then
  shift
  javac -verbose -d `prefix`build/classes -sourcepath `prefix`src "$@"
else
  jikes -verbose +F -d `prefix`build/classes -sourcepath `prefix`src "$@"
fi
