       out="${build.src}/${fonts.dir}/CourierBoldOblique.java">
      <param name="encoding" expression="${textfontencoding}"/>
    </style>
    <style
       in="${Helvetica.xml}" style="${fontfile.xsl}"
       out="${build.src}/${fonts.dir}/Helvetica.java">
      <param name="encoding" expression="${textfontencoding}"/>
    </style>
    <style
