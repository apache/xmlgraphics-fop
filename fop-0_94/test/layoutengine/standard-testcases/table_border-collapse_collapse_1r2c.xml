    <!-- row 1 cell 2 -->
    <eval expected="93000" xpath="//flow/block[4]/block[2]/@ipd"/>
    <eval expected="107000" xpath="//flow/block[4]/block[2]/@ipda"/>
    <eval expected="28800" xpath="//flow/block[4]/block[2]/@bpd"/>
