<testcase>
    <info>
        <p>
            Check pdf structure for image with alt-text
        </p>
    </info>
    <cfg>
        <fop version="1.0">
            <accessibility>true</accessibility>
        </fop>
    </cfg>
    <fo>

        <fo:root xmlns:fo="http://www.w3.org/1999/XSL/Format"
                 xmlns:fox="http://xmlgraphics.apache.org/fop/extensions">

            <fo:layout-master-set>
                <fo:simple-page-master master-name="A4" margin="2cm">
                    <fo:region-body/>
                </fo:simple-page-master>
            </fo:layout-master-set>

            <fo:page-sequence master-reference="A4">
                <fo:flow flow-name="xsl-region-body">

                    <fo:block>
                        <fo:external-graphic src="../resources/images/bgimg300dpi.jpg" fox:alt-text="A test image used for accessibility."/>
                    </fo:block>

                </fo:flow>
            </fo:page-sequence>

        </fo:root>
    </fo>
    <pdf-tagging-checks>
        <eval expected="A test image used for accessibility." xpath="//P/Figure/@alternateDescription"/>
    </pdf-tagging-checks>
</testcase>